{

  "variables": {
    "template": "ubuntu16.04.3",
    "access_token": "{{env `VAGRANT_CLOUD_TOKEN`}}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "disk_size": "40000",
      "hard_drive_interface": "sata",
      "headless": "false",
      "http_directory": "http",
      "output_directory": "output-{{user `template`}}",
      "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
      "iso_checksum_type": "sha256",
      "iso_url": "http://www.linorg.usp.br/ubuntu-releases/xenial/ubuntu-16.04.3-server-amd64.iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "20m",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04.3/preseed.cfg ",
        "<enter>"
      ]
    }
  ], 

  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "builds/{{user `template`}}.box",
        "keep_input_artifact": false
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "viniciusxavierbove/{{user `template`}}",
        "access_token": "{{user `access_token`}}",
        "version": "1.0.0",
        "version_description": "CentOS 7.3.1611"
      }
    ]
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/ubuntu/apt.sh",
        "scripts/ubuntu/virtualbox.sh",
        "scripts/common/vagrant.sh",
        "scripts/ubuntu/sshd.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/ubuntu/minimize.sh"
      ]
    }
  ]
}
  